<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="1100.0" stylesheets="@reviewdesign.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bookshopmanagementsystem.ReviewController">
    <children>
        <TableView fx:id="reviewTable" layoutX="50.0" layoutY="60.0" prefHeight="400.0" prefWidth="1000.0" stylesheets="@reviewdesign.css">
            <columns>
                <TableColumn fx:id="titleColumn" prefWidth="300.0" text="Title" />
                <TableColumn fx:id="authorColumn" prefWidth="200.0" text="Author" />
                <TableColumn fx:id="genreColumn" prefWidth="200.0" text="Genre" />
            </columns>
         <styleClass>
            <String fx:value="table-column" />
            <String fx:value="column-header" />
            <String fx:value="label" />
         </styleClass>
        </TableView>
        <Button layoutX="20.0" layoutY="20.0" onAction="#onLoadReviewsButtonClick" stylesheets="@reviewdesign.css" text="Load Reviews" />
        <Button layoutX="20.0" layoutY="520.0" onAction="#handleBackButton" stylesheets="@reviewdesign.css" text="Back" />
    </children>
   <styleClass>
      <String fx:value="column-header-background" />
      <String fx:value="filter" />
      <String fx:value="table-view" />
      <String fx:value="table-column" />
      <String fx:value="table-column" />
      <String fx:value="column-header" />
      <String fx:value="label" />
   </styleClass>
</AnchorPane>
